{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "cloud-run-service-name",
          "region": "REGION",
          "local": {
            "port": 8080
          }
        }
      }
    ]
  }
}
