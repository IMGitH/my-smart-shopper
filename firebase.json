{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "redirect": "https://my-smart-shopper-api.onrender.com/api/",
        "type": 302
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
