{
  "hosting": {
    "site": "my-smart-shopper-e0c23",
    "public": "dist",

    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/api/**",
        "destination": "https://my-smart-shopper-api.onrender.com/api/:splat",
        "type": 307        // use 308 if you prefer “permanent”
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
