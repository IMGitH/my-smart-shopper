{
  "hosting": {
    "site": "my-smart-shopper-e0c23",
    "public": "dist",

    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "redirects": [
      {
        "source": "/api/:path*",
        "destination": "https://my-smart-shopper-api.onrender.com/api/:path*",
        "type": 307
      }
    ],

    "rewrites": [
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
